package Week9;


/**
 * Write a description of class School here.
 *
 * @author (your name)
 * @version (a version number or a date)
 */
class Person
{
    int id;
    String name;
    double basicSalary;
    static String Collegename="A College";
    
    public Person(int id, String name, double basicSalary){
        this.id=id;
        this.name=name;
        this.basicSalary=basicSalary;
    }
    
    double calculateAnnualSalary(){
        return basicSalary * 12;
    }
    
    public static void main(String[] args){
        Teacher t1 = new Teacher(1, "Annie", 70000, "Science", 9000);
        Staff s1 = new Staff(2, "Barbie",70000, 2500, 500);

        System.out.println("Teacher Annual Salary: "+t1.calculateAnnualSalary());
        System.out.println("Staff Salary: "+s1.calculateSalary());
        
        System.out.println("College Name: "+Person.Collegename);
    }
}

class Teacher extends Person{
    String subject;
    double bonus;

    Teacher(int id, String name, double basicSalary, String subject, double bonus) {
        super(id, name, basicSalary); 
        this.subject = subject;
        this.bonus = bonus;
    }

    @Override
    double calculateAnnualSalary() {
        return super.calculateAnnualSalary() + bonus;
    }
}

class Staff extends Person {
    int workingHours;
    double ratePerHour;
    Staff(int id, String name,double basicSalary,int workingHours, double ratePerHour) {
        super(id, name, basicSalary); 
        this.workingHours = workingHours;
        this.ratePerHour = ratePerHour;
    }

    double calculateSalary() {
        return workingHours * ratePerHour;
    }
}
